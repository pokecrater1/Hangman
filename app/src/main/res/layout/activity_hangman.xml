<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_hangman"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="pokecrater1.hangman.Hangman">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button1"
        android:text="Submit"
        android:layout_marginBottom="38dp"
        android:layout_alignParentBottom="true"
        android:layout_toLeftOf="@+id/buttonPlay"
        android:layout_toStartOf="@+id/buttonPlay"
        android:layout_marginRight="65dp"
        android:layout_marginEnd="65dp" />

    <!--        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />-->

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enter your next guess: "
        android:layout_alignBottom="@+id/textView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="49dp" />

    <EditText
        android:id="@+id/textView"
        android:layout_width="208dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:inputType="text"
        android:textSize="24dp" />

    <TextView
        android:id="@+id/phraseid"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="51dp"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/numWrong"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="106dp"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/youWin"
        android:layout_width="266dp"
        android:layout_height="109dp"
        android:layout_below="@+id/textView"
        android:layout_centerHorizontal="true"
        android:textSize="50dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/initialABC"
        android:textSize="19dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/response"
        android:textSize="19dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/buttonPlay"
        android:text="Play Again"
        android:layout_marginRight="44dp"
        android:layout_marginEnd="44dp"
        android:layout_alignBaseline="@+id/button1"
        android:layout_alignBottom="@+id/button1"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:id="@+id/statusMessage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="164dp"
        android:textSize="19dp" />

    <ImageView
        android:layout_width="41dp"
        android:layout_height="34dp"
        android:layout_alignEnd="@+id/youWin"
        android:layout_alignTop="@+id/youWin"
        android:src="@drawable/ultimatehead"
        android:visibility="invisible"
        android:id="@+id/head"
        android:layout_alignRight="@+id/youWin" />

    <ImageView
        android:id="@+id/hanger"
        android:layout_width="84dp"
        android:layout_height="218dp"
        android:layout_alignBottom="@+id/youWin"
        android:layout_alignStart="@+id/arms"
        android:visibility="invisible"
        android:src="@drawable/hanger"
        android:layout_alignLeft="@+id/arms" />

    <ImageView
        android:layout_width="39dp"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/youWin"
        android:layout_below="@+id/head"
        android:visibility="invisible"
        android:src="@drawable/body"
        android:id="@+id/body"
        android:layout_alignRight="@+id/youWin" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/youWin"
        android:layout_below="@+id/head"
        android:visibility="invisible"
        android:src="@drawable/body1"
        android:id="@+id/arms"
        android:layout_alignRight="@+id/youWin" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/head"
        android:layout_below="@+id/body"
        android:visibility="invisible"
        android:src="@drawable/body1"
        android:id="@+id/legs"
        android:layout_alignLeft="@+id/head" />



</RelativeLayout>